{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Shelter App with g++",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-std=c++17",
                "main.cpp",
                "pet.cpp",
                "Authentication.cpp",
                // IMPORTANT: If you add more .cpp files, add them here!
                "-o",
                "shelter_app"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}